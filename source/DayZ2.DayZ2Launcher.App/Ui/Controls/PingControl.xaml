<UserControl x:Class="DayZ2.DayZ2Launcher.App.Ui.Controls.PingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid HorizontalAlignment="Right">
		<TextBlock Text="{Binding Ping, Converter={StaticResource PingToTextConverter}}"
		           Foreground="{Binding Ping, Converter={StaticResource PingToForegroundConverter}}"
		           HorizontalAlignment="Right"
		           VerticalAlignment="Center"
		           TextAlignment="Right" />
	</Grid>
</UserControl>