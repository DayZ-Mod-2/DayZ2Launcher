<Window x:Class="zombiesnu.DayZeroLauncher.App.Ui.Controls.InfoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DayZero Launcher" Height="130" Width="300"
        WindowStyle="None" BorderThickness="0.5" BorderBrush="LightGray" AllowsTransparency="true"  ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Name="InfoWindow">
    <Grid Height="130" Background="#444444" Name="ContentGrid">
        <Label Name="Headline" Foreground="White" Height="50" HorizontalContentAlignment="Center" FontSize="15" Margin="0,-80,0,0">Headline</Label>
        <Label Name="Message" Foreground="White" Height="60" HorizontalContentAlignment="Center" Margin="0,0,0,0">Information</Label>
        <Label Visibility="Hidden" Name="LinkBlock" HorizontalContentAlignment="Center" Margin="0,65,0,0">
            <Hyperlink Name="URL" Click="URL_Click">
                <TextBlock Name="URLText"></TextBlock></Hyperlink>
        </Label>
        <Button Name="OKButton" Click="OK_Click" Margin="-10,70,0,0" Height="25" Width="80">OK</Button>
    </Grid>
</Window>
