<Window x:Class="zombiesnu.DayZeroLauncher.App.Ui.Controls.FileVerifierPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please wait .." Height="130" Width="300"
        WindowStyle="None" BorderThickness="0.5" BorderBrush="LightGray" AllowsTransparency="true"  ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Height="130" Width="300" Background="#444444">
        <Label Name="Headline" Foreground="White" Height="50" Width="280" HorizontalContentAlignment="Center" FontSize="15" Margin="0,-80,0,0">Headline</Label>
        <Label Name="Message" Foreground="White" Height="60" HorizontalContentAlignment="Center" Width="280" Margin="0,0,0,0">Information</Label>
        <Button Name="OKButton" Click="OK_Click" Margin="-10,70,0,0" Height="25" Width="80">OK</Button>
    </Grid>
</Window>
